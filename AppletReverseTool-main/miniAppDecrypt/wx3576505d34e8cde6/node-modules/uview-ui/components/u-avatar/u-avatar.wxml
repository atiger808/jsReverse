<view bindtap="__e" class="u-avatar data-v-d1f81fdc" data-event-opts="{{[ [ 'tap',[ [ 'click',['$event'] ] ] ] ]}}" style="{{$root.s0}}">
    <image binderror="__e" class="u-avatar__img data-v-d1f81fdc" data-event-opts="{{[ [ 'error',[ [ 'loadError',['$event'] ] ] ] ]}}" mode="{{imgMode}}" src="{{avatar}}" style="{{$root.s1}}" wx:if="{{!uText&&avatar}}"></image>
    <block wx:else>
        <text class="u-line-1 data-v-d1f81fdc" style="{{'font-size:'+'38rpx'+';'}}" wx:if="{{uText}}">{{uText}}</text>
        <slot wx:else></slot>
    </block>
    <view class="{{['u-avatar__sex','data-v-d1f81fdc','u-avatar__sex--'+sexIcon]}}" style="{{$root.s2}}" wx:if="{{showSex}}">
        <u-icon bind:__l="__l" class="data-v-d1f81fdc" name="{{sexIcon}}" size="20" vueId="1b1b8aa6-1"></u-icon>
    </view>
    <view class="u-avatar__level data-v-d1f81fdc" style="{{$root.s3}}" wx:if="{{showLevel}}">
        <u-icon bind:__l="__l" class="data-v-d1f81fdc" name="{{levelIcon}}" size="20" vueId="1b1b8aa6-2"></u-icon>
    </view>
</view>
